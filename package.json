{
  "name": "aoc25-battle-royale",
  "version": "1.0.0",
  "description": "ðŸ† Advent of Code 2025 Battle Royale - Claude vs Codex vs Gemini",
  "type": "module",
  "private": true,
  "workspaces": [
    "core/runner",
    "core/dashboard",
    "core/db"
  ],
  "scripts": {
    "scaffold": "tsx scripts/scaffold.ts",
    "init-db": "tsx scripts/init-db.ts",
    "init-db:reset": "tsx scripts/init-db.ts --reset",
    "publish-day": "tsx scripts/publish-day.ts",
    "sync-tools": "tsx scripts/sync-tools.ts",
    "setup": "npm run scaffold && npm install && npm run sync-tools && npm run init-db && npm run publish-day -- 0",
    "dev": "npm run dev -w core/dashboard",
    "build": "npm run build -w core/runner && npm run build -w core/dashboard",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^4.0.15",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
